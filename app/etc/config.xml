<config>
    <global>
        <install>
            <date/>
        </install>
        <resources>
            <default_setup>
                <connection>
                    <host>localhost</host>
                    <username/>
                    <password/>
                    <dbname>magento</dbname>
                    <model>mysql4</model>
                    <initStatements>SET NAMES utf8</initStatements>
                    <type>pdo_mysql</type>
                    <active>0</active>
                </connection>
            </default_setup>
            <default_write>
                <connection>
                    <use>default_setup</use>
                </connection>
            </default_write>
            <default_read>
                <connection>
                    <use>default_setup</use>
                </connection>
            </default_read>
            <core_setup>
                <setup>
                    <module>Mage_Core</module>
                </setup>
                <connection>
                    <use>default_setup</use>
                </connection>
            </core_setup>
            <core_write>
                <connection>
                    <use>default_write</use>
                </connection>
            </core_write>
            <core_read>
                <connection>
                    <use>default_read</use>
                </connection>
            </core_read>
        </resources>
        <resource>
            <connection>
                <types>
                    <pdo_mysql>
                        <adapter>Varien_Db_Adapter_Pdo_Mysql</adapter>
                        <class>Mage_Core_Model_Resource_Type_Db_Pdo_Mysql</class>
                        <compatibleMode>1</compatibleMode>
                    </pdo_mysql>
                </types>
            </connection>
        </resource>
        <di>
            <preferences>
                <Mage_Core_Model_Db_UpdaterInterface>Mage_Core_Model_Db_Updater</Mage_Core_Model_Db_UpdaterInterface>
                <Mage_Core_Model_AppInterface>Mage_Core_Model_App_Proxy</Mage_Core_Model_AppInterface>
                <Mage_Core_Model_Config_InvalidatorInterface>Mage_Core_Model_Config_Invalidator_Proxy</Mage_Core_Model_Config_InvalidatorInterface>
                <Mage_Core_Model_CacheInterface>Mage_Core_Model_Cache_Proxy</Mage_Core_Model_CacheInterface>
            </preferences>
            <Mage_Core_Model_Cache>
                <parameters>
                    <cacheTypes>Mage_Core_Model_Cache_Types_Proxy</cacheTypes><!-- @todo remove cache types proxy as soon as deprecated methods of Mage_Core_Model_Cache are removed -->
                    <config>Mage_Core_Model_Config_Proxy</config>
                </parameters>
            </Mage_Core_Model_Cache>
            <Mage_Core_Model_Config>
                <parameters>
                    <storage>Mage_Core_Model_Config_Storage</storage>
                </parameters>
            </Mage_Core_Model_Config>
            <Mage_Core_Model_Config_Container>
                <parameters>
                    <configCache>Mage_Core_Model_Config_Cache_Proxy</configCache>
                </parameters>
            </Mage_Core_Model_Config_Container>
            <Mage_Core_Model_Config_Resource>
                <parameters>
                    <config>Mage_Core_Model_Config_Primary</config>
                </parameters>
            </Mage_Core_Model_Config_Resource>
            <Mage_Core_Model_Config_Locales>
                <parameters>
                    <storage>Mage_Core_Model_Config_Storage_Locales</storage>
                </parameters>
            </Mage_Core_Model_Config_Locales>
            <Mage_Core_Model_Config_Modules>
                <parameters>
                    <storage>Mage_Core_Model_Config_Storage_Modules</storage>
                </parameters>
            </Mage_Core_Model_Config_Modules>
            <Mage_Core_Model_Config_Storage>
                <parameters>
                    <loader>Mage_Core_Model_Config_Loader_Proxy</loader>
                </parameters>
            </Mage_Core_Model_Config_Storage>
            <Mage_Core_Model_Config_Storage_Modules>
                <parameters>
                    <loader>Mage_Core_Model_Config_Loader_Modules_Proxy</loader>
                </parameters>
            </Mage_Core_Model_Config_Storage_Modules>
            <Mage_Core_Model_Config_Storage_Locales>
                <parameters>
                    <loader>Mage_Core_Model_Config_Loader_Locales_Proxy</loader>
                </parameters>
            </Mage_Core_Model_Config_Storage_Locales>
            <Mage_Core_Model_Event_Config>
                <parameters>
                    <config>Mage_Core_Model_Config_Modules_Proxy</config>
                </parameters>
            </Mage_Core_Model_Event_Config>
            <Mage_Install_Model_Installer>
                <parameters>
                    <config>Mage_Core_Model_Config_Proxy</config>
                </parameters>
            </Mage_Install_Model_Installer>
            <Mage_Core_Model_Config_Invalidator>
                <parameters>
                    <primaryConfig>Mage_Core_Model_Config_Primary</primaryConfig>
                    <modulesConfig>Mage_Core_Model_Config_Modules</modulesConfig>
                    <localesConfig>Mage_Core_Model_Config_Locales</localesConfig>
                </parameters>
            </Mage_Core_Model_Config_Invalidator>
            <Magento_Filesystem>
                <parameters>
                    <adapter>Magento_Filesystem_Adapter_Local</adapter>
                </parameters>
                <shared>0</shared>
            </Magento_Filesystem>
            <preferences>
                <Mage_Core_Model_UrlInterface>Mage_Core_Model_Url</Mage_Core_Model_UrlInterface>
            </preferences>
            <Magento_Data_Structure>
                <shared>0</shared>
            </Magento_Data_Structure>
            <Magento_Http_Handler_Composite>
                <parameters>
                    <handlers>
                        <app>
                            <sortOrder>50</sortOrder>
                            <class>Mage_Core_Model_App_Handler</class>
                        </app>
                    </handlers>
                </parameters>
            </Magento_Http_Handler_Composite>
            <Magento_Datasource_Path_Composite>
                <parameters>
                    <items>
                        <data>Magento_Datasource_Factory</data>
                        <request>Mage_Core_Model_Datasource_Request_Visitor</request>
                    </items>
                </parameters>
            </Magento_Datasource_Path_Composite>
            <Mage_Core_Helper_Url>
                <parameters>
                    <translate>Mage_Core_Model_Translate_Proxy</translate>
                </parameters>
            </Mage_Core_Helper_Url>
            <Mage_Core_Model_Design>
                <parameters>
                    <eventDispatcher>Mage_Core_Model_Event_Manager_Proxy</eventDispatcher>
                </parameters>
            </Mage_Core_Model_Design>
            <Magento_Acl>
                <shared>0</shared>
            </Magento_Acl>
        </di>
    </global>
    <default>
        <system>
            <filesystem>
                <base>{{root_dir}}</base>
                <app>{{root_dir}}/app</app>
                <code>{{app_dir}}/code</code>
                <design>{{app_dir}}/design</design>
                <locale>{{app_dir}}/locale</locale>
                <etc>{{app_dir}}/etc</etc>
                <media>{{media_dir}}</media>
                <upload>{{media_dir}}/upload</upload>
                <var>{{var_dir}}</var>
                <cache>{{var_dir}}/cache</cache>
                <session>{{var_dir}}/session</session>
                <tmp>{{var_dir}}/tmp</tmp>
                <pear>{{var_dir}}/pear</pear>
                <export>{{var_dir}}/export</export>
            </filesystem>
        </system>
        <general>
            <locale>
                <code>zh_CN</code>
                <timezone>America/Los_Angeles</timezone>
            </locale>
        </general>
    </default>
    <varien>
        <class>Varien</class>
    </varien>
</config>
